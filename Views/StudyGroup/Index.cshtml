
@model List<HamzaStudyGroup.Models.StudyGroupMember>

@{
    ViewBag.Title = "Study Group Members";
}

<h2>Study Group Members</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().StudentNumber)</th>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Surname)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>Picture</th>
            <th>Profile<</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <td>@member.StudentNumber</td>
                <td>@member.Name</td>
                <td>@member.Surname</td>
                <td>@member.Email</td>

                <td>
                    <a href="@Url.Content("~" + member.myLink)" class="btn btn-primary" target="_blank">LINK</a>
                </td>

                <td>
                    <img src="@Url.Content("~/images/" + member.StudentNumber + ".webp")" alt="@member.Name"
                         width="100" height="100" style="border-radius: 50%;" />



                </td>
            </tr>
        }
    </tbody>
</table>
